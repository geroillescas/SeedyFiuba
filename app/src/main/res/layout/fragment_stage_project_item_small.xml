<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/dimension"
	android:clipToPadding="false"
	android:elevation="@dimen/dimension">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/stageProjectFragmentItem_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dimension"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:layout_alignParentStart="true"
			tools:text="Este es un titulo" />

		<TextView
			android:id="@+id/stageProjectFragmentItem_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dimension"
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			android:layout_alignParentEnd="true"
			tools:text="Este es un monto" />

	</RelativeLayout>
</androidx.cardview.widget.CardView>
